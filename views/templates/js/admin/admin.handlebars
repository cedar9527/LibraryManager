{{#unless login}}
    <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                        <div class="form-wrap">
                    <h1>Se Connecter</h1>
                        <form role="form" action="javascript:;" method="post" id="loginForm" autocomplete="off">
                            <div class="form-group">
                                <label for="login" class="sr-only">Email</label>
                                <input type="text" name="login" id="login" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="key" class="sr-only">Password</label>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>
                            <input type="submit" id="submitBtn" class="btn btn-custom btn-lg btn-block" value="Log in">
                        </form>
                        <hr>
                        </div>
                    </div> <!-- /.col-xs-12 -->
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </section>
{{/unless}}