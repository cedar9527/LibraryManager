<form class="form-horizontal editForm" id='movieEditForm'>
<fieldset>

<div class="form-group">
  <label class="col-md-6 control-label" for="title">Titre</label>  
  <div class="col-md-6">
  <input id="titleInput" name="title" placeholder="" class="form-control input-md" type="text" title="titre" value="{{title}}">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="author">Réalisateur</label>  
  <div class="col-md-6">
  <input id="authorInput" name="author" placeholder="" class="form-control input-md" type="text" title="réalisateur" value="{{author}}">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="year">Année</label>
  <div class="col-md-6">
    <input type="number" id="yearInput" class="form-control" value="{{year}}">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="content">Contenu</label>  
  <div class="col-md-6">
  <input id="contentInput" name="content" placeholder="" class="form-control input-md" type="text"  title="Lien vers la vidéo" value="{{content}}">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="description">Description</label>
  <div class="col-md-6">                     
    <textarea class="form-control" id="descriptionText" name="description">{{description}}</textarea>
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="image">Image</label>  
  <div class="col-md-6">
  <span class="file-input btn btn-block btn-primary btn-file">
    Choix de fichier...
    <input id="imageInput" name="image" type="file" value="{{fileName image}}">
  </span>
  </div>
</div>

</fieldset>

<div class="form-group">
    <img id="movieImg" class="movieImg" src="{{image}}{{concat '?' (timestamp)}}" title="Image du film" />
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="editMovieBtn"></label>
  <div class="col-md-12 text-center">
    <button id="editMovieBtn" name="editMovieBtn" class="btn btn-primary" type="button">Sauvegarder</button>
  </div>
</div>
</form>
