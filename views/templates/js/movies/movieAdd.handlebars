<form class="form-horizontal addForm" id='movieAddForm'>
<fieldset>

<div class="form-group">
  <label class="col-md-6 control-label" for="title">Titre</label>  
  <div class="col-md-6">
  <input id="titleInput" name="title" placeholder="" class="form-control input-md" type="text" title="titre">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="author">Réalisateur</label>  
  <div class="col-md-6">
  <input id="authorInput" name="author" placeholder="" class="form-control input-md" type="text" title="réalisateur">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="year">Année</label>
  <div class="col-md-6">
    {{!-- <select id="yearInput" name="year" class="form-control">
      {{#for 0 20 1}}
        {{#if (eq @this (substract 2000 (currentYear)) ) }}
            <option value="{{add @this 2000}}" selected="selected">{{add 2000 @this}}</option>
        {{else}}
            <option value="{{this}}">{{add 2000 @this}}</option>
        {{/if}}
      {{/for}}
    </select>
    --}}
    <input type="number" id="yearInput" class="form-control" value="{{currentYear}}">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="content">Contenu</label>  
  <div class="col-md-6">
  <input id="contentInput" name="content" placeholder="" class="form-control input-md" type="text"  title="Lien vers la vidéo">
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="description">Description</label>
  <div class="col-md-6">                     
    <textarea class="form-control" id="descriptionText" name="description"></textarea>
  </div>
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="image">Image</label>  
  <div class="col-md-6">
  <span class="file-input btn btn-block btn-primary btn-file">
    Choix de fichier...
    <input id="imageInput" name="image" type="file">
  </span>
  </div>
</div>

</fieldset>

<div class="form-group">
    <img id="movieImg" class="movieImg" src="" title="Image du film" />
</div>

<div class="form-group">
  <label class="col-md-6 control-label" for="addMovieBtn"></label>
  <div class="col-md-12 text-center">
    <button id="addMovieBtn" name="addMovieBtn" class="btn btn-primary" type="button">Ajouter</button>
  </div>
</div>
</form>
